<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.technoverse.sithu.darna.MainActivity"
    android:background="@color/md_grey_300">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="3dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@color/md_grey_100"
            android:clickable="true"
            android:onClick="callSavehouse"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/home_image_width"
                    android:layout_height="@dimen/home_image_height"
                    android:scaleType="fitXY"
                    android:src="@drawable/newspaper" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_savehouse"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ဂေဟာများ ၊ ကျောင်းများ"
                    android:textColor="@color/md_teal_700"
                    android:textSize="@dimen/title_text_size" />
            </LinearLayout>


        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@color/md_grey_100"
            android:onClick="callOrganization"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/home_image_width"
                    android:layout_height="@dimen/home_image_height"
                    android:scaleType="fitXY"
                    android:src="@drawable/newspaper" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_organization"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ပရဟိတ အသင်းအဖွဲ့များ"
                    android:textSize="@dimen/title_text_size"
                    android:textColor="@color/md_teal_700"
                    android:typeface="serif" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@color/md_grey_100"
            android:clickable="true"
            android:onClick="callFoundation"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/home_image_width"
                    android:layout_height="@dimen/home_image_height"
                    android:scaleType="fitCenter"
                    android:src="@drawable/foundation" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_foundation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ပရဟိတ ဖောင်ဒေးရှင်းများ"
                    android:textColor="@color/md_teal_700"
                    android:textSize="@dimen/title_text_size" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:onClick="callNews"
            android:background="@color/md_grey_100"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/home_image_width"
                    android:layout_height="@dimen/home_image_height"
                    android:scaleType="fitCenter"
                    android:src="@drawable/newspaper" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingRight="10dp">

                <TextView
                    android:id="@+id/text_news"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/md_teal_700"
                    android:text="ပရဟိတနှင့်  သက်ဆိုင်သော သတင်းများ"
                    android:textSize="@dimen/title_text_size" />
            </LinearLayout>

        </LinearLayout>



    </LinearLayout>

</LinearLayout>
