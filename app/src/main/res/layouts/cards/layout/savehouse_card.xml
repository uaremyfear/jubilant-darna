<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="3dp"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/logo_and_header_image"
            android:src="@drawable/organ_photo"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/img_card"
            android:layout_toEndOf="@+id/img_card"
            android:textAppearance="?android:textAppearanceLarge"
            android:text="ပညာဒါန ပရဟိတ ကမ္းလင့္လက္ကေလးမ်ား ကမ္းလင့္လက္ကေလးမ်ား "
            android:lineSpacingExtra="5dp"
            android:textSize="18sp"
            android:textColor="@color/md_teal_700"
            android:layout_marginTop="11dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:ellipsize="marquee"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="7dp"
            android:layout_marginRight="4dp"
            android:layout_marginLeft="4dp"
            android:paddingBottom="4dp"
            >

            <ImageView
                android:id="@+id/img_location"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:paddingTop="5dp"
                android:paddingRight="3dp"
                android:src="@drawable/location_icon2"
                />
            <TextView
                android:id="@+id/txt_township"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/img_location"
                android:text="ကြည့်မြင်တိုင်"/>



            <TextView
                android:id="@+id/txt_block"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="၃၄ ရပ်ကွက်"
                android:layout_alignParentRight="true"/>

            <ImageView
                android:id="@+id/img_time"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:paddingTop="5dp"
                android:paddingRight="3dp"
                android:layout_toLeftOf="@id/txt_block"
                android:src="@drawable/address"
                />
        </RelativeLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>
